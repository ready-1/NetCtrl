# NetCtrl Environment Configuration
# Copy this file to .env and fill in appropriate values
# WARNING: Never commit your actual .env file to version control

# -------------------------
# Core Django Settings
# -------------------------
# Django secret key (required for production) - generate using 'django.core.management.utils.get_random_secret_key()'
DJANGO_SECRET_KEY=your-secure-secret-key-here

# Debug mode (True for development, False for production)
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------------
# Environment Configuration
# -------------------------
# Environment type: 'development', 'testing', or 'production'
ENVIRONMENT=development

# -------------------------
# Database Settings
# -------------------------
# Set to True to use PostgreSQL, False to use SQLite
USE_POSTGRES=False

# PostgreSQL credentials (required if USE_POSTGRES=True)
POSTGRES_DB=netctrl_db
POSTGRES_USER=netctrl_user
POSTGRES_PASSWORD=secure-database-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------------
# GitHub Integration
# -------------------------
# GitHub Personal Access Token (required for GitHub API integration)
GITHUB_TOKEN=your-github-token-here

# GitHub Repository (format: 'owner/repo')
GITHUB_REPOSITORY=ready-1/NetCtrl

# -------------------------
# Media and Static Files
# -------------------------
# Absolute path to the media root (optional)
# MEDIA_ROOT=/path/to/media

# Absolute path to the static root (optional)
# STATIC_ROOT=/path/to/static

# -------------------------
# Logging Configuration
# -------------------------
# Log level for various components (INFO, WARNING, ERROR, DEBUG)
LOG_LEVEL=INFO

# TCP Syslog host (optional)
# SYSLOG_HOST=syslog
# SYSLOG_PORT=5140
